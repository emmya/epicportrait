<!-- Page Content -->
<div id="page-content-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">

<div class="page-header">
	<h1>Your images</h1>
</div>

<% if (images.length === 0) { %>
  No images yet!
<% } %>

<!-- loop div -->
<div>
<% images.forEach(function(image) { %>

  <!-- Prints image ID -->
	<p>Image <%= image.id %></p>
  <!-- Rendered image links to image's page -->
	<a href="/tada/<%= image.id %>" class=" btn tnail">
  <!-- variables -->
    <% var background = image.background %>
      <% var animal = image.animal %>
      <% var itemone = image.itemone %>
      <% var itemtwo = image.itemtwo %>
      <% var img = image.img %>
  <!-- Rendered image -->
    <div class="result" id="smell" style="background-image:url(<%= background %>)">
        <img crossOrigin = "annonymous" src="<%= img %>" id="mainImg">
    <img crossOrigin = "annonymous" src="<%= animal %>" id="animal">
    <img crossOrigin = "annonymous" src="<%= itemone %>" id="itemone">
    <img crossOrigin = "annonymous" src="<%= itemtwo %>" id="itemtwo">
    </div>
  </a>
  <!-- /image link -->
  <!-- Delete button -->
	<form action="/tada/<%= image.id %>?_method=delete" method="post" >
    <input type="submit" value="Delete" class="btn btn-danger delbutt">
  </form>

<br><br>
<% }) %>
<!-- /loop -->
</div>
<!-- /loop div -->



    	</div>
    </div>
  </div>
</div>
<!-- /#page-content-wrapper -->
</div>
